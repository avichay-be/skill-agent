# Skill Agent Configuration

# Debug mode
DEBUG=false

# API Keys for authentication (comma-separated)
API_KEYS=dev-api-key,another-key

# GitHub Skills Repository
GITHUB_REPO_URL=https://github.com/your-org/skills-library.git
GITHUB_TOKEN=ghp_your_token_here
GITHUB_BRANCH=main
SKILLS_BASE_PATH=skills

# Or use local skills path (for development)
LOCAL_SKILLS_PATH=./skills-library

# Default LLM Vendor (anthropic, openai, gemini)
DEFAULT_VENDOR=anthropic

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Google Gemini Configuration
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# Execution Settings
DEFAULT_TIMEOUT_SECONDS=60
DEFAULT_RETRY_COUNT=2
MAX_PARALLEL_SKILLS=10

# Webhook Settings (optional)
WEBHOOK_SECRET=your-webhook-secret
